generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  image    String?

  activities Activity[]

  @@map("user")
}

model Activity {
  id        String   @id @default(uuid())
  user_id   String
  title     String
  isDone    Boolean @default(false)
  occurs_at DateTime

  user User @relation(fields: [user_id], references: [id])

  @@map("activities")
}
